<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color: blue">Login de Usuario</h1>
        <br />

        <form action="/login" method="POST">
            <div class="form-group">
                <input id="email" name='email' placeholder="email" class="form-control" type="email" required>
            </div>

            <div class="form-group">
                <input id="password" name='password' placeholder="password" class="form-control" type="password" required>
            </div>
            <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
        <hr>
        <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/register'">Ir a Register</button>
        </div>
    </div>
</div>